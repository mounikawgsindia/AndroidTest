<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_all_counts_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get All Accounts"
        android:layout_marginTop="200dp"
        android:background="@drawable/ripple_effect"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp"
        style="@style/NormalTextStyle_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image_store_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/image_store_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_capture_and_gallery_selection"
        android:padding="6dp"
        style="@style/NormalTextStyle_white"
        android:background="@drawable/ripple_effect"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/get_all_counts_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pdf_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_pdf"
        android:layout_marginTop="20dp"
        android:padding="6dp"
        style="@style/NormalTextStyle_white"
        android:background="@drawable/ripple_effect"
        app:layout_constraintTop_toBottomOf="@id/image_store_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />



</androidx.constraintlayout.widget.ConstraintLayout>
